<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/nextbook</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>
        <property name="show_sql">true</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <mapping class="com.nextbook.domain.entities.UserEntity"/>
        <mapping class="com.nextbook.domain.entities.RoleEntity"/>
        <mapping class="com.nextbook.domain.entities.PermissionEntity"/>
        <mapping class="com.nextbook.domain.entities.BookEntity"/>
        <mapping class="com.nextbook.domain.entities.SubCategoryEntity"/>
        <mapping class="com.nextbook.domain.entities.CategoryEntity"/>
        <mapping class="com.nextbook.domain.entities.PublisherEntity"/>
        <mapping class="com.nextbook.domain.entities.KeywordEntity"/>
        <mapping class="com.nextbook.domain.entities.AuthorEntity"/>
        <mapping class="com.nextbook.domain.entities.BookKeywordEntity"/>
        <mapping class="com.nextbook.domain.entities.BookAuthorEntity"/>
        <mapping class="com.nextbook.domain.entities.AdressesEntity"/>
        <mapping class="com.nextbook.domain.entities.OrderedBookEntity"/>
        <mapping class="com.nextbook.domain.entities.OrderEntity"/>
        <mapping class="com.nextbook.domain.entities.OrderStateEntity"/>
        <mapping class="com.nextbook.domain.entities.TypeOfPaymentEntity"/>
        <mapping class="com.nextbook.domain.entities.TypeOfDeliveringEntity"/>
    </session-factory>
</hibernate-configuration>